@page
@model JokesWebApp.Pages.Jokes.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Joke</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Joke.JokeQuestion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Joke.JokeQuestion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Joke.JokeAnswer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Joke.JokeAnswer)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Joke.JokeDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Joke.JokeDate)
</dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Joke.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Joke.Author.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Joke.JokeCategories)
        </dt>

        <dd class="col-sm-10">
            <table class="=" table">
                @foreach (var item in Model.Joke.JokeCategories)
                {
                    <tr>
                        <td>@Html.DisplayFor(model => item.Category.CategoryName)</td>
                    </tr>
                }
            </table>
        </dd>

        
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Joke.JokeId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
