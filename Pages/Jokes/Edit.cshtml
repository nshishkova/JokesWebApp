@page
@model JokesWebApp.Pages.Jokes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Joke</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Joke.JokeId" />
            <div class="form-group">
                <label asp-for="Joke.JokeQuestion" class="control-label"></label>
                <input asp-for="Joke.JokeQuestion" class="form-control" />
                <span asp-validation-for="Joke.JokeQuestion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Joke.JokeAnswer" class="control-label"></label>
                <input asp-for="Joke.JokeAnswer" class="form-control" />
                <span asp-validation-for="Joke.JokeAnswer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Joke.JokeDate" class="control-label"></label>
                <input asp-for="Joke.JokeDate" class="form-control" />
                <span asp-validation-for="Joke.JokeDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <table>
                        <tr>
                            @{
                                int cnt = 0;

                                foreach (var group in Model.JokeCategoryDataList)
                                {
                                    if (cnt++ % 10 == 0)
                                    {
                                    @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox" name="selectedCategories" value="@group.CategoryId" />
                                        @group.name
                                    @:</td>
                                }
                            @:</tr>
                            }
                        </table>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
