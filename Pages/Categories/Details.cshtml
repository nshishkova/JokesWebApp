@page
@model JokesWebApp.Pages.Categories.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
    </dl>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Jokes)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Jokes)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Joke.JokeQuestion)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Joke.JokeAnswer)
                </td>

                <td>
                    <a asp-page="/Jokes/Edit" asp-route-id="@item.JokeId">Edit</a> |
                    <a asp-page="/Jokes/Details" asp-route-id="@item.JokeId">Details</a> |
                    <a asp-page="/Jokes/Delete" asp-route-id="@item.JokeId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Category.CategoryId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
